<div class="form-group mb-3">
  <label for="title">Title</label>
  <input
    value="<%= article.title %>"
    required
    type="text"
    name="title"
    id="title"
    class="form-control"
  />
</div>
<div class="form-group mb-3">
  <label for="description">Description</label>
  <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group mb-3">
  <label for="markdown">Markdown</label>
  <textarea required name="markdown" id="markdown" class="form-control h-100"><%=article.markdown%></textarea>
</div>

<div class="btns pt-3">
  <a href="/" class="btn btn-secondary btn-sm mr-3">Cancel</a>
  <button type="submit" class="btn btn-primary btn-sm">Save</button>
</div>
